extends ../indexAdmin

block userContent
    .container-fluid.p-5
        h1.text-center Formulario de Edición de Usuarios 
        form(action=`/admin/usuarios/edit/${usuario.id}` method="POST") 
            .form-group
                label.form-label(for="correo" ) Correo:
                input.form-control(type="text" name="correo" id="correo" value=`${usuario.correo}` required)

            .form-group
                label.form-label(for="nombre" ) Nombre:
                input.form-control(type="text" name="nombre" id="nombre" value=`${usuario.nombre}` required)

            .form-group
                label.form-label(for="apellido" ) Apellido:
                input.form-control(type="text" name="apellido" id="apellido" value=`${usuario.apellido}` required)

            .form-group
                label.form-label(for="telefono" ) Teléfono:
                input.form-control(type="text" name="telefono" id="telefono" value=`${usuario.telefono}` required)

            .form-group
                label.form-label(for="contrasena" ) Contraseña:
                input.form-control(type="text" name="contrasena" id="contrasena" value=`${usuario.contrasena}` required)

            .form-group
                label.form-label(for="rol" ) Rol:
                input.form-control(type="text" name="rol" id="rol" value=`${usuario.rol}` required)
        
            button.btn.btn-primary(type="submit") Editar Usuario

    script(src="https://code.jquery.com/jquery-3.5.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js")